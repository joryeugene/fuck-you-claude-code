# Improve readline behavior

# Use Vi, not Emacs, style editing
set editing-mode vi

# Make Tab autocomplete regardless of filename case
set completion-ignore-case on

# List all matches in case multiple possible completions are possible
set show-all-if-ambiguous on

# Immediately add a trailing slash when autocompleting symlinks to directories
set mark-symlinked-directories on

# Show all autocomplete results at once
set page-completions off

# If there are more than 200 possible completions, ask to show them all
set completion-query-items 200

# Show extra file information when completing, like `ls -F` does
set visible-stats on

# Be more intelligent when autocompleting by also looking at the text after
# the cursor. For example, when the current line is "cd ~/src/mozil", and
# the cursor is on the "z", pressing Tab will not autocomplete it to "cd
# ~/src/mozillail", but to "cd ~/src/mozilla".
set skip-completed-text on

# Allow UTF-8 input and output, instead of showing stuff like $'\0123\0456'
set input-meta on
set output-meta on
set convert-meta off

# Use the text that has already been typed as the prefix for searching through
# commands (basically more intelligent Up/Down behavior)
"\e[A": history-search-backward
"\e[B": history-search-forward

# ===== IMPROVEMENTS =====

# Color files by type (like ls --color)
set colored-stats on

# Color the completion prefix (what you've typed) differently
set colored-completion-prefix on

# Show mode indicator (INS/CMD for vi mode)
set show-mode-in-prompt on

# Append "/" to directory completions automatically
set mark-directories on

# Match hidden files without needing to type the dot
set match-hidden-files on

# Display completions horizontally sorted (easier to scan)
set print-completions-horizontally off

# Enable bell only for ambiguous completions
set bell-style visible

# Faster completion - don't wait for ambiguous completions
set show-all-if-unmodified on

# Vi mode specific bindings
$if mode=vi
  # Use jk/kj to escape insert mode (like Vim)
  set keymap vi-insert
  "jk": vi-movement-mode
  "kj": vi-movement-mode

  # Ctrl-l to clear screen in insert mode
  "\C-l": clear-screen

  # Ctrl-a/e for home/end even in vi mode (muscle memory)
  "\C-a": beginning-of-line
  "\C-e": end-of-line
$endif
